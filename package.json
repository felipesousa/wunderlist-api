{
  "name": "wunderlist-api",
  "version": "2.0.0",
  "description": "Wunderlist made easy",
  "main": "build/index.umd.js",
  "repository": "git@github.com:felipesousa/wunderlist-api.git",
  "author": "Felipe Sousa <felipzbr@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test && lint-staged",
      "pre-push": "yarn run build"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "prebuild": "rm -rf dist/ && rm -rf build/",
    "build": "tsc -p tsconfig.json && rollup -c rollup.config.js",
    "postbuild": "cp dist/*.d.ts build/"
  },
  "private": false,
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@types/pretty-format": "^24.3.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": ["<rootDir>/src"],
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --no-semi --single-quote --trailing-comma es5"
    ]
  }
}
